{
  "name": "ecourse_backend",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint . --fix --cache",
    "prepare": "husky",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "build:hooks": "tsc -p tsconfig.hooks.json",
    "build:migrations": "tsc -p tsconfig.migrations.json",
    "build": "run-s build:hooks build:migrations",
    "watch:hooks": "tsc -p tsconfig.hooks.json --watch",
    "watch:migrations": "tsc -p tsconfig.migrations.json --watch",
    "watch": "run-p watch:hooks watch:migrations"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.2.1",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "npm-run-all2": "^8.0.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "volta": {
    "node": "24.13.0",
    "npm": "11.8.0"
  }
}
